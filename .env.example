# -- MCP Server Tokens --
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-personal-access-token
INTERCOM_API_TOKEN=your-intercom-api-token
JAM_MCP_TOKEN=jam_pat_your-jam-personal-access-token
NEW_RELIC_ACCOUNT_ID=your-new-relic-account-id
NEW_RELIC_API_KEY=NRAK-your-new-relic-api-key
SEMAPHORE_MCP_TOKEN=your-semaphore-mcp-token
SENTRY_AUTH_TOKEN=sntryu_your-sentry-user-auth-token
SENTRY_HOST=your-org.sentry.io
SHORTCUT_API_TOKEN=your-shortcut-api-token

# -- Proxy Bearer Token (Legacy Bypass Mode Only) --
MCP_PROXY_TOKEN=your-proxy-bearer-token

# -- 1MCP Ports & URL --
# Internal agent port
ONE_MCP_PORT=3050
# Host-facing port
ONE_MCP_EXTERNAL_PORT=9494
# Full external URL
ONE_MCP_EXTERNAL_URL=http://127.0.0.1:9494

# -- 1MCP Configuration --
# info, debug, warn, error
# ONE_MCP_LOG_LEVEL=info
# ${VAR} substitution in mcp.json
# ONE_MCP_ENABLE_ENV_SUBSTITUTION=true
# Hot-reload mcp.json on change
ONE_MCP_ENABLE_CONFIG_RELOAD=true
# Load MCP servers in parallel
ONE_MCP_ENABLE_ASYNC_LOADING=true
# Require OAuth auth
ONE_MCP_ENABLE_AUTH=true
# Trust proxy for X-Forwarded-*
# ONE_MCP_TRUST_PROXY=uniquelocal
