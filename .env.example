# MCP Server Tokens
SENTRY_AUTH_TOKEN=sntryu_your-sentry-user-auth-token
SENTRY_HOST=your-org.sentry.io
SEMAPHORE_MCP_TOKEN=your-semaphore-mcp-token
SHORTCUT_API_TOKEN=your-shortcut-api-token
NEW_RELIC_API_KEY=NRAK-your-new-relic-api-key
NEW_RELIC_ACCOUNT_ID=your-new-relic-account-id
JAM_MCP_TOKEN=jam_pat_your-jam-personal-access-token
INTERCOM_API_TOKEN=your-intercom-api-token

# Proxy bearer token (used by nginx to authenticate incoming requests)
MCP_PROXY_TOKEN=your-proxy-bearer-token

# 1MCP Ports & URL
ONE_MCP_PORT=3050                                  # Internal agent port
ONE_MCP_EXTERNAL_PORT=9494                         # Host-facing port
ONE_MCP_EXTERNAL_URL=https://localhost:9494         # Full external URL

# 1MCP Configuration
# ONE_MCP_LOG_LEVEL=info                              # info, debug, warn, error
# ONE_MCP_ENABLE_ENV_SUBSTITUTION=true                # ${VAR} substitution in mcp.json
# ONE_MCP_ENABLE_CONFIG_RELOAD=true                   # Hot-reload mcp.json on change
# ONE_MCP_ENABLE_ASYNC_LOADING=true                   # Load MCP servers in parallel
# ONE_MCP_ENABLE_AUTH=false                            # Require authentication
