{
  "$schema": "https://docs.1mcp.app/schemas/v1.0.0/mcp-config.json",
  "version": "1.0.0",
  "mcpServers": {
    "semaphore": {
      "type": "http",
      "url": "https://mcp.semaphoreci.com/mcp",
      "headers": {
        "Authorization": "Bearer ${SEMAPHORE_MCP_TOKEN}"
      },
      "tags": ["ci", "devops"]
    },
    "jam": {
      "type": "http",
      "url": "https://mcp.jam.dev/mcp",
      "headers": {
        "Authorization": "Bearer ${JAM_MCP_TOKEN}"
      },
      "tags": ["frontend", "debug"]
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server@latest"],
      "env": {
        "SENTRY_ACCESS_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_HOST": "${SENTRY_HOST}"
      },
      "tags": ["observability"]
    },
    "shortcut": {
      "command": "npx",
      "args": ["-y", "@shortcut/mcp@latest"],
      "env": {
        "SHORTCUT_API_TOKEN": "${SHORTCUT_API_TOKEN}"
      },
      "tags": ["pm", "project"]
    },
    "newrelic": {
      "command": "npx",
      "args": ["-y", "newrelic-mcp"],
      "env": {
        "NEW_RELIC_API_KEY": "${NEW_RELIC_API_KEY}",
        "NEW_RELIC_ACCOUNT_ID": "${NEW_RELIC_ACCOUNT_ID}"
      },
      "tags": ["observability"]
    },
    "intercom": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.intercom.com/mcp",
        "--header",
        "Authorization:Bearer ${INTERCOM_API_TOKEN}"
      ],
      "tags": ["support"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
      "tags": ["local", "files"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "tags": ["memory", "notes"]
    },
    "notion": {
      "transport": "http",
      "url": "https://mcp.notion.com/mcp",
      "tags": ["notion", "docs", "notes"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "tags": ["code", "git", "github"]
    }
  }
}
